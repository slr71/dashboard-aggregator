{
  "name": "dashboard-aggregator",
  "version": "1.0.0",
  "description": "Gathers info for the DE dashboard.",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "dev-server": "cross-env NODE_ENV=development babel-node ./src",
    "build-service": "babel ./src --out-dir dist",
    "docs": "jsdoc -r -d generated-docs ./src",
    "build": "run-p docs build-service",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "test": "jest",
    "test-watch": "jest --watch",
    "format": "prettier --write 'src/**/*.js'",
    "lint": "eslint --max-warnings=0 ./src/",
    "clean": "rimraf ./dist ./generated-docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cyverse-de/dashboard-aggregator.git"
  },
  "author": "",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/cyverse-de/dashboard-aggregator/issues"
  },
  "homepage": "https://github.com/cyverse-de/dashboard-aggregator#readme",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js",
    "exec": "run-p dev-server docs"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {}
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "bracketSpacing": true,
    "arrowParens": "always",
    "jsxBracketSameLine": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --max-warnings=0",
      "prettier --write",
      "jest --bail --findRelatedTests"
    ]
  },
  "dependencies": {
    "config": "^3.3.0",
    "express": "^4.17.1",
    "express-winston": "^4.0.3",
    "js-yaml": "^3.13.1",
    "pg": "^7.18.2",
    "winston": "^3.2.1"
  },
  "optionalDependencies": {
    "fsevents": "^1.2.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.6",
    "@babel/node": "^7.8.4",
    "@babel/plugin-proposal-optional-chaining": "^7.8.3",
    "@babel/preset-env": "^7.8.6",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jsdoc": "^3.6.3",
    "lint-staged": "^10.0.8",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2"
  }
}
